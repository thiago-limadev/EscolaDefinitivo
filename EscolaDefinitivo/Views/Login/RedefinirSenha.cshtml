@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>

}


<form asp-controller="Login" asp-action="EnviarEmailRedefinirSenha" method="post">
    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" class="form-control" id="Login" placeholder="User-Login" asp-for="Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Endereço de email</label>
        <input type="text" class="form-control" id="Email" placeholder="Seu e-mail Cadastrado" asp-for="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>


    <a class="btn btn-secondary" asp-controller="Logi" asp-action="Index" role="button">Voltar</a>
    <button type="submit" class="btn btn-primary">Redefinir Senha</button>

</form>

